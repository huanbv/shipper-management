@model CreateEntryViewModel

@{
    ViewBag.Title = "CreateEntry";
    var m = Model;
}


<h2>Tạo đơn hàng mới</h2>
<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Order_Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Order_Name" class="form-control">
            <span asp-validation-for="Order_Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DriverId" class="col-sm-2 col-form-label">Driver</label>
        <div class="col-sm-10">
            <select asp-for="DriverId"
                    asp-items="@( new SelectList(Model.Drivers, "Id" , "First_Name"))"
                    class="form-control">
                <option selected disabled hidden>--Chon Driver</option>
            </select>
            <span asp-validation-for="DriverId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ShipperId" class="col-sm-2 col-form-label">Driver</label>
        <div class="col-sm-10">
            <select asp-for="ShipperId"
                    asp-items="@( new SelectList(Model.Shippers, "Id" , "First_Name"))"
                    class="form-control">
                <option selected disabled hidden>--Chon Shipper</option>
            </select>
            <span asp-validation-for="ShipperId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CustomerId" class="col-sm-2 col-form-label">Driver</label>
        <div class="col-sm-10">
            <select asp-for="CustomerId"
                    asp-items="@( new SelectList(Model.Customers, "Id" , "First_Name"))"
                    class="form-control">
                <option selected disabled hidden>--Chon Customer</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ConsigneeId" class="col-sm-2 col-form-label">Driver</label>
        <div class="col-sm-10">
            <select asp-for="ConsigneeId"
                    asp-items="@( new SelectList(Model.Consignees, "Id" , "First_Name"))"
                    class="form-control">
                <option selected disabled hidden>--Chon Consignee</option>
            </select>
            <span asp-validation-for="ConsigneeId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Order_Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="datetime-local" asp-for="Order_Date" class="form-control">
            <span asp-validation-for="Order_Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Pick_Up_Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="datetime-local" asp-for="Pick_Up_Date" class="form-control">
            <span asp-validation-for="Pick_Up_Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Delivery_Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="datetime-local" asp-for="Delivery_Date" class="form-control">
            <span asp-validation-for="Delivery_Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Order_Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Order_Price" class="form-control">
            <span asp-validation-for="Order_Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="State" class="form-control">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Weight" class="form-control">
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Order_Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Order_Status" class="form-control">
            <span asp-validation-for="Order_Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Notes" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Notes" class="form-control">
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Tạo đơn</button>
            <a asp-controller="Entry" asp-action="Index" class="btn btn-primary">Hủy</a>
        </div>
    </div>
</form>
